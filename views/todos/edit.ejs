<form action="/todos/<%= todo.id %>?_method=PUT" method="POST">
    <input type="text" name="todo" value="<%= todo.todo %>""> <br>
    <label>
        <input type="checkbox" name="done" <%= todo.done ? "checked" : ""%>>
        Completed
    </label>
        <button type="submit">Update To-do</button>
</form>


